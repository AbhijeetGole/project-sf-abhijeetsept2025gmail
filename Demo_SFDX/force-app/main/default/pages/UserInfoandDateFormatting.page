<apex:page >
    <!-- User Info and Date Formatting -->
    
    <h2>Welcome, {!$User.FirstName} {!$User.LastName}</h2>
    <p>Your username is: {!$User.Username}</p>
    <p>Today's date is: {!TODAY()}</p>
    <p>Current year: {!YEAR(TODAY())}</p>
    
    <!-- Date math and Conditional Display -->
    
    <h3>Appointment Reminder</h3>
    <p>Next Appointment Date: {!DATE(2025, 10, 5)}</p>
    <p>Days Remaining: {!DATE(2025, 10, 5) - TODAY()}</p>

    <apex:outputText rendered="{!(DATE(2025, 10, 5) - TODAY()) < 7}">
        Your appointment is within a week!
    </apex:outputText>
    
    <!-- Math and Logic -->
   <h3>Health Metrics</h3>
    <p>HbA1c Level: {!7.8}</p>
    <p>Is HbA1c Normal? {!IF(7.8 < 5.7, "Yes", "No")}</p>
    <p>2^3 (2 raised to 3) = {!2 * 2 * 2}</p>
    
    <!-- String Function -->
    <h3>Patient ID Formatting</h3>
    <p>Raw ID: {!"PAT123456"}</p>
    <p>Masked ID: {!LEFT("PAT123456", 3) & "*****"}</p>
    
    <!-- Global Variables -->
    <h3>Environment Info</h3>
    <p>Organization Name: {!$Organization.Name}</p>
    <p>Current Page Name: {!$CurrentPage.Name}</p>
    <p>Profile Name: {!$Profile.Name}</p>
</apex:page>