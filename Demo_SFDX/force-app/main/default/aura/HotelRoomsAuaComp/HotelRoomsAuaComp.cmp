<aura:component implements="flexipage:availableForAllPageTypes"> 
    <aura:attribute name="hotelRoomsInfo" type="List" /> 
    <aura:attribute name="selectedHotelRoom" type="String" /> 
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" /> 
    <lightning:card title="Hotel Rooms Aura!"></lightning:card> 
    <lightning:layout> 
        <lightning:layoutItem size="4" padding="around-small"> 
            <ul> <!-- LWC tileclick event is being handled by Parent Aura Component --> 
                <aura:iteration items="{!v.hotelRoomsInfo}" var="item"> 
                    <li style="padding:10px"> 
                        <c:hotelRoom hotelRoomInfo="{#item}" showRoomInfo="true" ontileclick="{!c.tileClickHandler}" /> 
                    </li> 
                </aura:iteration> 
            </ul> 
        </lightning:layoutItem> 
        <lightning:layoutItem size="8" padding="around-small">
    <h1>You have selected: {!v.selectedHotelRoom}!</h1> 
        </lightning:layoutItem> 
    </lightning:layout>
</aura:component>