<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes" access="global" >
    
    <!-- Linking static resource with the component-->
    <ltng:require styles="{!$Resource.JustCSS}" />
    
    <h3>Tag Selector from External CSS as a Static Resource!</h3>
    <aura:attribute name='num1' type='integer' />
    <aura:attribute name='num2' type='integer' />
    <aura:attribute name='total' type='integer' />
    
    <aura:attribute name="isAdd" type="boolean" default="false" />
    <aura:attribute name="isSub" type="boolean" default="false" />
    <aura:attribute name="isMul" type="boolean" default="false" />
    <aura:attribute name="isDiv" type="boolean" default="false" />
    
    <h1>Calculator</h1>
    <h2 class='divClass'>Class Selector from External CSS as a Static Resource!</h2>
    <lightning:input style="margin:20px;" name="input1"
                     label="Enter First Number" value="{!v.num1}" />
    <lightning:input style="margin:20px;" name="input2" 
                     label="Enter Second Number" value="{!v.num2}" />
    <br />
    <lightning:buttonGroup>
        <lightning:button label="Addition" onclick="{!c.Add}" />
        <lightning:button label="Subtraction" onclick="{!c.Sub}" />
        <lightning:button label="Multiplication" onclick="{!c.Mul}" />
        <lightning:button label="Division" onclick="{!c.Div}" />
        <lightning:button label="Clear" onclick="{!c.Clear}" />
        
    </lightning:buttonGroup>
    <br />
    
    <div>
        <aura:if isTrue="{!v.isAdd}">
            <h1>Addition of two numbers = {!v.total}</h1>
        </aura:if>
        <aura:if isTrue="{!v.isSub}">
            <h1>Subtraction of Two Numbers = {!v.total}</h1>
        </aura:if>
        <aura:if isTrue="{!v.isMul}">
            <h1>Multiplication of Two Numbers = {!v.total}</h1>
        </aura:if>
        <aura:if isTrue="{!v.isDiv}">
            <h1>Division of Two Numbers = {!v.total}</h1>
        </aura:if>
    </div>
    
</aura:component>